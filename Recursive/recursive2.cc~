//recursive twos

#include <iostream>

using namespace std;

int twos(int number,int count)
{
    if(number%2 == 0){
	count +=1;
	twos(number/2, count);
    }
    else
        return count;
}

int main()
{
    int number;
    int count = 0;
    cout << "Enter a number to find the number of factors of two: " << endl;
    cin >> number;
    cout << "The number of factors of two are " << twos(number, count) << endl;
    return 0;
}




    
    


