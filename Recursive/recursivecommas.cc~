//recursive commas

#include <iostream>

using namespace std;

void commas(int number){
    if(number < 1000){
        cout << number;
    }
    else{
	commas(number/1000);
        cout << "," << number%1000;
    }
    return;
}

int main(){
    int number;
    cout << "What number would you like to convert to commas: " << endl;
    cin >> number;
    commas(number);
    cout << endl;
    return 0;
}
